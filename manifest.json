{
    "manifest_version": 2,

    "name": "Third Base Coach",
    "description": "A chrome extension to stay up to date with your favorite MLB team",
    "version": "1.0",

    "browser_action": {
        "default_icon": "baseball.svg.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "lodash.core.min.js",
            "background.js",
            "jquery-2.2.2.min.js"
        ]
    },
    "content_scripts": [
    {
        "matches":[
            "http://mlb.mlb.com/mlb/gameday/index.jsp*"
            ],
        "js": [
            "jquery-2.2.2.min.js",
            "lodash.core.min.js",
//            "scraper.js",
            "popup.js"
        ]
    }
    ],
    "permissions": [
        "storage",
        "tabs",
        "notifications",
        "http://*/",
        "https://*/"
    ]
}
