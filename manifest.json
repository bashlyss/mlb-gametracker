{
    "manifest_version": 2,

    "name": "Baseball Hackday 2016",
    "description": "A cool chrome extension to visualize data in mlb gameday",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [
    {
        "matches":[
            "http://mlb.mlb.com/mlb/gameday/index.jsp*"
            ],
        "js": [
            "jquery-2.2.2.min.js",
            "lodash.core.min.js",
            "content.js",
            "scraper.js"
            ]
    }
    ],
    "permissions": [
        "tabs",
        "notifications",
        "http://*/",
        "https://*/"
    ]
}
